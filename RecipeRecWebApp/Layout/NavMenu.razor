@using Models;
﻿
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Find Recipes</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-cart-plus-nav-menu" aria-hidden="true"></span> Recipes
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Favorites" Match="NavLinkMatch.All">
                <span class="bi bi-star-fill-nav-menu" aria-hidden="true"></span> Favorites (@SharedDataModel.FavoriteRecipes.Count)
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Pantry" Match="NavLinkMatch.All">
                <span class="bi bi-basket-nav-menu" aria-hidden="true"></span> Pantry (@SharedDataModel.SelectedIngredients.Count)
            </NavLink>
        </div>
    </nav>

</div>

